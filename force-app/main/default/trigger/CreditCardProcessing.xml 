<?xml version="1.0" encoding="UTF-8"?>
<Trigger xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <description>Process Credit Card Payment on Order</description>
    <name>ProcessCreditCardPayment</name>
    <status>Active</status>
    <triggerSource>onOrder</triggerSource>
    <type>Before</type>
    <type>After</type>
    <formula>Payment_Method__c == 'Credit Card'</formula>
    <operations>
        <description>Securely collect credit card information</description>
        <description>Generate notification confirming purchase</description>
        <description>Complete payment process</description>
    </operations>
</Trigger>